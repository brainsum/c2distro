{#
/**
 * @file
 * Theme override for a dropbutton wrapper.
 *
 * Available variables:
 * - children: Contains the child elements of the dropbutton menu.
 *
 * @see template_preprocess()
 *
 * @ingroup themeable
 */
#}

{% if children %}
  {% apply spaceless %}
    <div class="dropbutton">
      <div class="dropbutton__widget">
        {{ children }}
      </div>
      <button class="dropbutton__button">
        <svg class="icon dropbutton__icon" aria-hidden="true" focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
          <path fill="currentColor" d="M143 352.3L7 216.3c-9.4-9.4-9.4-24.6 0-33.9l22.6-22.6c9.4-9.4 24.6-9.4 33.9 0l96.4 96.4 96.4-96.4c9.4-9.4 24.6-9.4 33.9 0l22.6 22.6c9.4 9.4 9.4 24.6 0 33.9l-136 136c-9.2 9.4-24.4 9.4-33.8 0z"></path>
        </svg>
        <span class="visually-hidden">{{ 'Toggle dropdown list'|t }}</span>
      </button>
    </div>
  {% endapply %}
{% endif %}
