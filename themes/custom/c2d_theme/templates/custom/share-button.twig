{{ attach_library('c2d_theme/share_button_from_ifrc') }}

<div class="share-button">
    <button class="share-button--button"><img class="share-button--icon" alt="share this page" src="/profiles/contrib/c2distro/themes/custom/c2d_theme/images/dist/svg/share.svg"/></button>
    <div id="linksDropdown" class="share-button--links">
        <ul>
            <li><a target="_blank" href="http://www.facebook.com/sharer.php?src=sp&u={{ share_url }}"><img src="/profiles/contrib/c2distro/themes/custom/c2d_theme/images/dist/svg/Facebook.svg"></a></li>
            <li><a target="_blank" href="https://twitter.com/intent/tweet?text={{ share_url }}"><img src="/profiles/contrib/c2distro/themes/custom/c2d_theme/images/dist/svg/Twitter.svg"></a></li>
            <li><a target="_blank" href="https://www.linkedin.com/shareArticle?mini=true&url={{ share_url }}"><img src="/profiles/contrib/c2distro/themes/custom/c2d_theme/images/dist/svg/Linkedin.svg"></a></li>
        </ul>
    </div>
</div>
